  "version": "0.2.0",
  "configurations": [
    {
      "name": "Bootstrap the server",
      "presentation": {
        "group": "Server",
        "order": 2
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "start:debug",
        "--",
        "bootstrap"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
      "preLaunchTask": "npm: build - packages/server"
    },
    {
      "name": "Run the server",
      "presentation": {
        "group": "Server",
        "order": 3
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "start:debug",
        "--",
        "run"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
      "preLaunchTask": "npm: build - packages/server"
    },
    {
      "name": "Run server tests",
      "presentation": {
        "group": "Server",
        "order": 4
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    }
  ]
}