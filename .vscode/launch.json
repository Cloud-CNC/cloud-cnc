{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run search tests",
      "presentation": {
        "group": "Search"
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/search",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "Bootstrap the server",
      "presentation": {
        "group": "Server",
        "order": 1
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "start:debug",
        "--",
        "bootstrap"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "Run the server",
      "presentation": {
        "group": "Server",
        "order": 2
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "start:debug",
        "--",
        "run"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "Run server tests",
      "presentation": {
        "group": "Server",
        "order": 3
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "Run the UI server",
      "presentation": {
        "group": "UI",
        "order": 3
      },
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
  ]
}