{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": [
      "vitest",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "baseUrl": ".",

    /* Emit */
    "sourceMap": true,

    /* Language and Environment */
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "preserve"
  },
  "include": [
    "**/*.vue",
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "dist/*"
  ]
}
