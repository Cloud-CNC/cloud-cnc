{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "!/*": [
        "./test/*"
      ],
      "#/*": [
        "../*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "ts-node": {
    "files": true
  }
}
