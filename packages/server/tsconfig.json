{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "api/*": [
        "../api/*"
      ],
      "relay/*": [
        "../relay/*"
      ],
      "server/*": [
        "../server/*"
      ],
      "ui/*": [
        "../ui/*"
      ]
    },

    /* Emit */
    "declaration": true,
    "outDir": "dist"
  }
}
