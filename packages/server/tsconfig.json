{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "!/*": [
        "./test/*"
      ]
    },

    /* Emit */
    "outDir": "dist"
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts"
  ]
}
